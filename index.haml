%html{:lang => "en"}
  %head
    %title {Title}
    %meta{:charset => "utf-8"}
      %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
        %meta
          {block:Description}
          %meta
            {/block:Description}
            %link
              %link{:href => "{RSS}", :rel => "alternate", :type => "application/rss+xml"}
                %link{:href => "http://static.tumblr.com/m6nmumr/pSpo6o0gm/screen.css", :rel => "stylesheet"}
  %header#header
    {block:ShowTitle}
    %h1.blog-title
      %a{:href => "/"} {Title}
    {/block:ShowTitle}
    
    {block:Description}
    #description {Description}
    {/block:Description}
  %body
    .content {Body}
    #posts
      {block:Posts}{block:Text}
      .post_text
        {block:Title}
        %h3
          %strong
            %a{:href => "{Permalink}"} {Title}
        {/block:Title}
        {Body}
        
        {block:Date}
        .timestamp
          {Month} {DayOfMonth}, {Year} {12Hour}:{Minutes}{CapitalAmPm}
          {/block:Date}
        {block:HasTags}
        .text_tags
          {block:Tags}
          %a{:href => "{TagURLChrono}"} \#{Tag}
          {/block:Tags}
          {/block:HasTags}
        {/block:Text}
      {block:Link}
      .post_link
        %strong
          <a href="{URL}" class="link" {Target}>{Name}
        {block:Description}
        .description {Description}
        {/block:Description}
        
        {block:Date}
        .timestamp
          {Month} {DayOfMonth}, {Year} {12Hour}:{Minutes}{CapitalAmPm}
          {/block:Date}
        {block:HasTags}
        .link_tags
          {block:Tags}
          %a{:href => "{TagURLChrono}"} \#{Tag}
          {/block:Tags}
          {/block:HasTags}
        {/block:Link}
      {block:Quote}
      .post_quote
        "{Quote}"
        {block:Source}
        %strong
          .source &ndash; {Source}
        {/block:Source}
        
        {block:Date}
        .timestamp
          {Month} {DayOfMonth}, {Year} {12Hour}:{Minutes}{CapitalAmPm}
          {/block:Date}
        {block:HasTags}
        .quote_tags
          {block:Tags}
          %a{:href => "{TagURLChrono}"} \#{Tag}
          {/block:Tags}
          {/block:HasTags}
        {/block:Quote}
